<br>
<div id="wrapper">
  <div id="page-wrapper">
    <br>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-ship"></i> Shipment
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
      <div class="col-lg-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-search fa-fw"></i>Search and Sort</h3>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <div class="list-group">
                <a href="#" class="list-group-item">


                </a>

              </div>
            </div>
            <div class="text-right">
              <a href="#">View All <i class="fa fa-arrow-circle-right"></i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-10">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-ship fa-fw"></i> My Shipments</h3>
          </div>
          <div class="panel-body">
            <div class = "shipments">

              <% if @shipments.empty? %>
              <h3 class="text-center">You have not post any shipment yet. Go create shipment by clicking the button below</h3>
              <div class="text-center"><%= link_to "Create Shipment", new_shipment_path, class: "btn btn-success" %></div>
              <div class="button text-center">
                <%= link_to "Post Shipment", new_shipment_path(id: @shipment), class: "btn btn-success btn-lg" %>
              </div>
              <% else %>
              <br>
              <br>

            </div>
            <div>
              <%@shipments.each do |shipment|%>


                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Shipment ID</th>
                            <th>Charges</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= shipment.created_at.strftime("%d-%m-%Y  (%H:%M)")%> </td>
                            <td><%= shipment.id%></td>
                            <td>
                              <%if shipment.charge.nil? %>
                              Calculating...
                              <%else%>
                              RM <%= shipment.charge%>
                              <% end%>
                            </td>
                            <td><%= shipment.status%></td>
                            <td><span>
                                <% if admin_user||staff_user%>
                              <%= link_to "", edit_shipment_path(shipment), class:"fa fa-pencil" %>
                            </span>&nbsp;&nbsp;
                            <% else %>
                            <% end %>
                              <span>
                                <%if shipment.charge.nil? %>
                                <%= link_to "", shipment_path(shipment), class:"fa fa-eye" %></span>&nbsp;&nbsp;
                                <% else%>
                                <%= link_to "Pay Now", shipment_path(shipment) %></span>&nbsp;&nbsp;
                                <% end%>
                                <span><%= link_to "", shipment_path(shipment), class:"fa fa-trash", data: { confirm: "Are you sure you want delete this shipment?"}, method: :delete %></span>
                                </td>
                          </tr>


                        </tbody>
                      </table>

                <%end%>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
